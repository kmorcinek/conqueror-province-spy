<Window x:Class="ProvinceSpy.WpfGui.PanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:ProvinceSpy.WpfGui.Controls"
        Title="PanelWindow" Height="300" Width="300">
    <Grid>
        <ListBox ItemsSource="{Binding DatabaseObjects}">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <controls:ProvinceUserControl DataContext="{Binding ProvinceViewModel}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
