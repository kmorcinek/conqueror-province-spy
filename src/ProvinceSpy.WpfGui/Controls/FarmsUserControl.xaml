<UserControl x:Class="ProvinceSpy.WpfGui.Controls.FarmsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="162.4" >
    <Grid>
        <Label Content="Farms" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Center" Height="23" Margin="0,16,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="30" IsReadOnly="True"
                 Text="{Binding Path=FarmsCount, Mode=OneWay}">
        </TextBox>
        <Button Content="Up" HorizontalAlignment="Right" Margin="0,15,10.4,9.6" Width="41" Click="Button_Click_1" RenderTransformOrigin="0.429,0.064"/>

    </Grid>
</UserControl>
